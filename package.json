{
  "name": "tweeter",
  "version": "0.1.0",
  "description": "an LLM tweet composer in the browser",
  "scripts": {
    "dev": "vite --mode dev --host",
    "build": "tsc && vite build --mode prod",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "author": "Nico Martin <mail@nico.dev>",
  "license": "MIT",
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "@mlc-ai/web-tokenizers": "^0.1.2",
    "@nico-martin/tvmjs": "^0.19.0-dev0",
    "focus-trap-react": "^10.2.3",
    "platform": "^1.3.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^20.11.3",
    "@types/postcss-mixins": "^9.0.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@webgpu/types": "^0.1.40",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.33",
    "postcss-mixins": "^9.0.4",
    "postcss-nesting": "^12.0.2",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.2.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.2.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^@theme/(.*)$",
      "^@app/(.*)$",
      "^@common/(.*)$",
      "^@store/(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nico-martin/tweeter"
  }
}
